	 public boolean isPalindrome(ListNode head) {
        boolean isPalindrome = true;
        boolean isEven = false;
        boolean isOdd = true;
        if(head == null || head.next == null)
        return true;
        
        ListNode prevHead = head;
        ListNode firstPointer = head;
        ListNode secondPointer = head;
        
        while(secondPointer.next != null){
            firstPointer = firstPointer.next;
            if(secondPointer.next.next == null){
            	isEven = true;
            	isOdd = false;
            	break;
            	}
            
            secondPointer = secondPointer.next.next;
        }
        
        if(isOdd){
       firstPointer = firstPointer.next;}
        
       System.out.println("FirstPointer Val "+ firstPointer.val);
       
       ListNode reverseHead = reverseList(firstPointer);
       while (reverseHead != null){
           if(prevHead.val != reverseHead.val)
            {
                return false;
            }
           head = head.next;
           reverseHead = reverseHead.next;
       }
       
       return isPalindrome;
   }
	
		
	
	
	
	
	
	
	
	
		
		public ListNode partition(ListNode head, int x) {
	        // write your code here
	        if (head == null) {
	            return null;
	        }
	        ListNode helper1 = new ListNode(0);
	        ListNode helper2 = new ListNode(0);
	        ListNode p1 = helper1;
	        ListNode p2 = helper2;
	        while (head != null) {
	            if (head.val < x) {
	                p1.next = head;
	                p1 = p1.next;
	            } else {
	                p2.next = head;
	                p2 = p2.next;
	            } 
	            head = head.next;
	        }
	        p2.next = null;
	        p1.next = helper2.next;
	        return helper1.next;
	    }
		
	
	
	
	
	
	
	
	
	
